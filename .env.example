# Capital.com MCP Server Configuration
# Copy this file to .env and fill in your actual values

# ============================================================
# REQUIRED: API Credentials
# ============================================================
# Environment: demo or live (default: demo)
CAP_ENV=demo

# API Key from Capital.com Settings > API integrations
CAP_API_KEY=ENTER_GENERATED_API_KEY

# Your Capital.com login email
CAP_IDENTIFIER=ENTER_YOUR_EMAIL

# API Key custom password (NOT your platform password)
CAP_API_PASSWORD=ENTER_YOUR_API_PASSWORD


# ============================================================
# SAFETY: Trading Controls (IMPORTANT!)
# ============================================================
# Allow trading operations (default: false)
CAP_ALLOW_TRADING=false

# Comma-separated list of allowed EPICs for trading (empty = block all trading)
# Example: CAP_ALLOWED_EPICS=SILVER,GOLD,BTCUSD
# Or use 'ALL' for unrestricted trading: CAP_ALLOWED_EPICS=ALL
CAP_ALLOWED_EPICS=

# Maximum position size (default: 1.0)
CAP_MAX_POSITION_SIZE=1.0

# Maximum working order size (default: 1.0)
CAP_MAX_WORKING_ORDER_SIZE=1.0

# Maximum open positions at any time (default: 3)
CAP_MAX_OPEN_POSITIONS=3

# Maximum orders per day (default: 20)
CAP_MAX_ORDERS_PER_DAY=20

# Require explicit confirm=true for all trade operations (default: true)
CAP_REQUIRE_EXPLICIT_CONFIRM=true

# Dry-run mode: refuse all trade executions (default: false)
CAP_DRY_RUN=false


# ============================================================
# OPTIONAL: Account & Session
# ============================================================
# Default account ID to use after login (optional)
# CAP_DEFAULT_ACCOUNT_ID=

# HTTP request timeout in seconds (default: 15)
CAP_HTTP_TIMEOUT_S=15

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
CAP_LOG_LEVEL=INFO

# WebSocket streaming (default: false) - NOT IMPLEMENTED YET
CAP_WS_ENABLED=false
